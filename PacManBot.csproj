<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Pacman</AssemblyName>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PreserveCompilationContext>false</PreserveCompilationContext>
    <RootNamespace>PacManBot</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\Debug</OutputPath>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>bin\Release</OutputPath>
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="_Emotes\**" />
    <Compile Remove="_Screenshots\**" />
    <EmbeddedResource Remove="_Emotes\**" />
    <EmbeddedResource Remove="_Screenshots\**" />
    <None Include="bin\config.bot" />
    <None Include="bin\contents.bot" />
    <None Remove="_Emotes\**" />
    <None Remove="_Screenshots\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="CommandHandler.cs" />
    <Compile Remove="Constants.cs" />
    <Compile Remove="LoggingService.cs" />
    <Compile Remove="Program.cs" />
    <Compile Remove="ReactionHandler.cs" />
    <Compile Remove="ScriptingService.cs" />
    <Compile Remove="StartupService.cs" />
    <Compile Remove="StorageService.cs" />
    <Compile Remove="Utils.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitattributes" />
    <None Remove=".gitignore" />
    <None Remove="Example custom maps.txt" />
    <None Remove="LinuxPublish.bat" />
    <None Remove="Icon.ico" />
    <None Remove="packages.config" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net" Version="2.0.0-beta-00876" />
    <PackageReference Include="Discord.Net.Commands" Version="2.0.0-beta-00876" />
    <PackageReference Include="Discord.Net.Core" Version="2.0.0-beta-00876" />
    <PackageReference Include="Discord.Net.Rest" Version="2.0.0-beta-00876" />
    <PackageReference Include="Discord.Net.Rpc" Version="2.0.0-beta-00860" />
    <PackageReference Include="Discord.Net.Webhook" Version="2.0.0-beta-00876" />
    <PackageReference Include="Discord.Net.WebSocket" Version="2.0.0-beta-00876" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="2.6.1" />
    <PackageReference Include="Microsoft.CodeAnalysis.Scripting" Version="2.6.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="2.0.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="copy &quot;bin\contents.bot&quot; &quot;bin/Debug/netcoreapp2.0/contents.bot&quot;" />
  </Target>

</Project>
